@section scripts {
    <script src="~/lib/site/StaticScenarios/index.js"></script>
}

<table class="table">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
                Название
            </th>
            <th>
                Активность
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                1
            </td>
            <td>
                <a asp-action="Birthday">Дни рождения</a>
            </td>
            <td>
                @if (ViewBag.HasBirthday)
                {
                    <a class="toogleBirthdayIsEnabled" href="#">
                        @if (ViewBag.IsBirthdayEnabled)
                        {
                            <text>Активен</text>
                        }
                        else
                        {
                            <text>Отключен</text>
                        }

                    </a>
                }
                else
                {
                    <text>Не подключен</text>
                }
            </td>
        </tr>
        <tr>
            <td>
                2
            </td>
            <td>
                <a asp-action="BirthdayWall">Дни рождения на стене</a>
            </td>
            <td>
                @if (ViewBag.HasBirthdayWall)
                {
                    <a class="toogleBirthdayWallIsEnabled" href="#">
                        @if (ViewBag.IsBirthdayWallEnabled)
                        {
                            <text>Активен</text>
                        }
                        else
                        {
                            <text>Отключен</text>
                        }
                    </a>
                }
                else
                {
                    <text>Не подключен</text>
                }
            </td>
        </tr>
    </tbody>
</table>
